<h2>Parent View</h2>

<div class="addChore">
	<form class="" action="admin/child/new" method="POST">
		<div class="form-group" style='width:90%'>
			<label for="name"><i class="fa fa-user fa-lg"></i>Child's name
				<input type="text" name="name">
			</label>
		</div>
		<div class="form-group" style='width:90%'>
			<label for="username"><i class="fa fa-user fa-lg"></i>Child's Username
				<input type="text" name="username">
			</label>
		</div>
		<div class="form-group" style='width:90%'>
			<label for="password"><i class="fa fa-user fa-lg"></i>Child's password
				<input type="password" name="password">
			</label>
		</div>
		<div class="form-group" style='width:90%'>
			<label for="bank"><i class="fa fa-user fa-lg"></i>Child's current bank
				<input type="text" name="bank">
			</label>
		</div>
		<div class="form-group" style='width:90%'>
			<label for="charity"><i class="fa fa-user fa-lg"></i>Child's charity
				<input type="text" name="charity">
			</label>
		</div>
		<input type="hidden" name="userId" value="<%=user.id%>">
		<input class="btn btn-primary childSubmit" type="submit" value="Add Child">
	</form>
</div>



<div class="addChore">
	<form action='admin/chore/new' method="POST">
		<div class="form-group" style="width:90%">
			<label for="name"><i class="fa fa-user fa-lg" aria-hidden="true"></i> Whats the chore?</label>
			<input id="name" class="form-control" type="text" name="name">
		</div>
		<div class="form-group">
			<label for="childId" value="0"><i class="fa fa-envelope fa-lg" aria-hidden="true"></i> Which child?
			<select name='childId'>
				<option value="0">Floyd</option>
				<option value="2">Ezikiel</option>
				<option value="3">Chalupa</option>
			</select>
			<label>
		</div>
		<div class="form-group">
			<label for="dueDate"><i class="fa fa-envelope fa-lg" aria-hidden="true"></i> When is it due?</label>
			<input type="date" name="dueDate">
		</div>
		<div class="form-group">
			<label for="value"><i class="fa fa-unlock-alt fa-lg" aria-hidden="true"></i> How much is it worth?</label>
			<input type="number" name="value">
		</div>
		<input class="btn btn-primary choreSubmit" type="submit" value="Add Chore">
		<input type="hidden" name="isDone" value="false">
		<input type="hidden" name="approved" value="false">
		<input type="hidden" name="userId" value="<%=user.id%>">


	</form>
</div>
