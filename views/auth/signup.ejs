<form action="/auth/signup" method="POST">
    <div class="form-group">
        <label for="authName"><i class="fa fa-user fa-lg" aria-hidden="true"></i> Name</label>
        <input id="authName" class="form-control" type="text" name="name">
    </div>
  <div class="form-group">
    <label for="authEmail"><i class="fa fa-envelope fa-lg" aria-hidden="true"></i> Email</label>
    <input id="authEmail" class="form-control" type="email" name="email">
  </div>


  <div class="form-group">
    <label for="authPassword"><i class="fa fa-unlock-alt fa-lg" aria-hidden="true"></i> Password</label>
    <input id="authPassword" class="form-control" type="password" name="password">
  </div>

  <input class="btn btn-primary" type="submit">
</form>
